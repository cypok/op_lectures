% numbers formating: \num{123456}
\usepackage{numprint}
\newcommand{\num}[1]{\numprint{#1}}
  \npthousandsep{\,}
  \npthousandthpartsep{}
  \npdecimalsign{,}

\newcommand{\pcnum}[1]{\ensuremath{\mathtt{#1}}}
\newcommand{\bin}[1]{\pcnum{#1}_2}
\newcommand{\hex}[1]{\pcnum{#1}_16}


